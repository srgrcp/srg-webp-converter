{
  "name": "srg-webp-converter",
  "description": "Convert images to webp format",
  "version": "0.1.1",
  "private": true,
  "main": "./dist/electron/main.js",
  "author": {
    "name": "Sergio Carrillo",
    "url": "https://github.com/srgrcp"
  },
  "license": "WTFPL",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "build": "next build renderer && next export renderer -o dist/renderer",
    "el:build": "tsc --project ./electron/tsconfig.json",
    "el:start": "electron ./dist/electron/main.js",
    "el:start:prod": "cross-env ELECTRON_IS_DEV=0 electron ./dist/electron/main.js",
    "release": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "recoil": "^0.6.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.19",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "eslint": "8.9.0",
    "eslint-config-next": "12.1.0",
    "postcss": "^8.4.6",
    "rimraf": "^3.0.2",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "build": {
    "appId": "com.srgrcp.srg-webp-converter",
    "asar": true,
    "extends": null,
    "compression": "maximum",
    "productName": "SRG Webp Converter",
    "copyright": "Copyright Â© 2022 Sergio Carrillo",
    "files": [
      "./dist/electron/main.js",
      "./dist/electron/**/*",
      "./dist/renderer/**/*",
      "./dist/shared/**/*",
      "package.json"
    ],
    "extraFiles": [
      "./bin/**/*"
    ],
    "win": {
      "icon": "./dist/renderer/favicon.ico"
    }
  }
}
